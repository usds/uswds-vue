{
  "name": "uswds-vue",
  "version": "0.1.35",
  "private": false,
  "description": "Vue USWDS component library",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --report --modern --target lib --name uswds-vue src/main.js",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "docs:build": "vuepress build src-docs",
    "docs:dev": "vuepress dev src-docs",
    "prepublishOnly": "$npm_execpath build",
    "release": "standard-version",
    "test": "jest"
  },
  "main": "dist/uswds-vue.umd.min.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "dependencies": {
    "color": "^3.1.3",
    "core-js": "^3.6.5",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "uswds": "^2.9.0",
    "vue-the-mask": "^0.11.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.4.0",
    "@vue/cli-plugin-eslint": "~4.4.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.4.0",
    "@vue/test-utils": "^1.1.1",
    "babel-eslint": "^10.1.0",
    "chance": "^1.1.7",
    "eslint": "^7.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "jest": "^26.6.1",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.2",
    "standard-version": "^9.0.0",
    "vue-gtag": "^1.9.1",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.11",
    "vuepress": "^1.5.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "off",
      "vue/no-unused-vars": "off",
      "vue/no-parsing-error": [
        2,
        {
          "x-invalid-end-tag": false
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest/globals": true,
          "jest": true
        }
      },
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "testURL": "http://localhost/",
    "collectCoverage": false,
    "preset": "@vue/cli-plugin-unit-jest"
  },
  "authors": {
    "name": "Mike Pritchard",
    "email": "michael.j.pritchard@omb.eop.gov"
  },
  "keywords": [
    "uswds",
    "vue",
    "vuejs"
  ],
  "license": "MIT",
  "repository": "https://github.com/usds/uswds-vue"
}
